{
	"name": "@repo/backend",
	"version": "1.0.0",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "rimraf dist && NODE_ENV=production bun build --target bun --minify-whitespace --minify-syntax --outfile ./dist/index.js src/index.ts",
		"dev": "bun --watch src/index.ts",
		"clean": "rimraf dist node_modules",
		"type-check": "bun --bun tsc --noEmit",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"start": "bun --env-file=.env --env-file=.env.production ./dist/index.js",
		"db:generate": "bun x drizzle-kit generate",
		"db:push": "bun x drizzle-kit push",
		"db:migrate": "bun x drizzle-kit migrate",
		"db:studio": "bun x drizzle-kit studio"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/html": "^1.4.0",
		"@elysiajs/openapi": "1.4.11",
		"@elysiajs/static": "^1.4.0",
		"@gramio/init-data": "^0.0.5",
		"drizzle-orm": "^0.44.5",
		"drizzle-typebox": "^0.3.3",
		"elysia": "catalog:",
		"env-var": "^7.5.0",
		"pg": "^8.16.3",
		"postgres": "^3.4.7"
	},
	"devDependencies": {
		"@repo/tsconfig": "workspace:*",
		"@types/bun": "catalog:",
		"typescript": "catalog:",
		"rimraf": "catalog:",
		"drizzle-kit": "^0.31.4",
		"@elysiajs/eden": "^1.3.3"
	}
}
