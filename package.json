{
  "name": "my-turborepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "bun x @biomejs/biome check .",
    "lint:fix": "bun lint --write",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "preclean": "rimraf node_modules dist bun.lockb .turbo"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "turbo": "latest",
    "@types/bun": "^1.2.21",
    "@biomejs/biome": "^2.2.3",
    "drizzle-kit": "^0.31.4"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "1.4.11",
      "typescript": "5.8.2",
      "@types/bun": "1.3.0",
      "@biomejs/biome": "2.2.5",
      "rimraf": "6.0.1"
    }
  }
}