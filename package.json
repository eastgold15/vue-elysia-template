{
  "name": "vue-elysia-template",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "npx ultracite check",
    "fix": "npx ultracite fix",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "preclean": "rimraf node_modules dist bun.lockb .turbo",
    "prepare": "husky"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/bun": "^1.2.21",
    "husky": "^9.1.7",
    "lefthook": "^2.0.2",
    "lint-staged": "^16.2.6",
    "turbo": "latest",
    "ultracite": "6.1.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "1.4.11",
      "typescript": "5.8.2",
      "@types/bun": "1.3.0",
      "@biomejs/biome": "2.2.5",
      "rimraf": "6.0.1"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
